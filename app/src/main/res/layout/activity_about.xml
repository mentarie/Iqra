<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AboutActivity">

    <include layout="@layout/activity_toolbar_regular"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="14dp"
        android:background="@drawable/button_bg_rounded_corners">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo_iqra" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:text="versi 1.0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:text="Aplikasi mobile android Buku Iqra' merupakan aplikasi yang digunakan untuk belajar membaca Al-Qur'an dengan metode Iqra'."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:text="Aplikasi mobile android Buku Iqra' berisi latihan dan tes baca Iqra. Pada latihan, santri dapat mendengarkan audio bacaan Iqra. Pada Tes baca, suara bacaan santri akan terekam di sistem dan dicek apakah sudah benar atau masih salah."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:text="Aplikasi mobile android Buku Iqra' ini dikembangkan oleh Mentari ER sebagai project penelitian Tugas Akhir Prodi Komputer dan Sistem Informasi."/>
    </LinearLayout>
</LinearLayout>