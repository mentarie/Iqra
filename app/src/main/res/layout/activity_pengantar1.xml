<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pengantar1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pengantar1Activity">

    <include layout="@layout/activity_toolbar_regular"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="717dp"
        android:background="@drawable/bg_ornamen"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:text="Pengantar"
            android:textAlignment="center"
            android:textSize="21dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_margin="14dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:padding="10dp"
            android:src="@drawable/pengantar_jilid1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">

            <ImageView
                android:id="@+id/button_latihan"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:src="@drawable/button_latihan" />

            <ImageView
                android:id="@+id/button_tesbaca"
                android:layout_width="wrap_content"
                android:layout_height="87dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:src="@drawable/button_tesbaca" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>