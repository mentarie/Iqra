<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_latihan_baca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".activity.tes_baca.TesBacaActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_regular"/>
    <LinearLayout
        android:id="@+id/textview1"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:padding="14dp"
            android:textAlignment="center"
            android:background="@drawable/button_bg_rounded_theme"
            android:textColor="@color/colorWhite"
            android:text="Klik pada bacaan untuk mulai merekam"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/scrollview"
        app:layout_constraintTop_toBottomOf="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="24dp">
                <!--recycle view-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/item_recycleview_tesbaca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="14dp"
        android:background="@color/colorBackground">
        <ImageView
            android:id="@+id/j1_h18_b"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_navigate_before"
            android:background="@drawable/button_bg_rounded_disabled"/>
        <TextView
            android:id="@+id/j1_h18_nomor_halaman"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="1/2"/>
        <ImageView
            android:id="@+id/j1_h18_n"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_navigate_next"
            android:background="@drawable/button_bg_rounded_theme"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>