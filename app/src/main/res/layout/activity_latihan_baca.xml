                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--Navigasi halaman-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48px"
        tools:layout_editor_absoluteX="14dp">
        <ImageView
            android:id="@+id/j1_h1_b"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_navigate_before"
            android:background="@drawable/button_bg_rounded_disabled"/>
        <TextView
            android:id="@+id/j1_h1_nomor_halaman"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="1/18"/>
        <ImageView
            android:id="@+id/j1_h1_n"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_navigate_next"
            android:background="@drawable/button_bg_rounded_theme"/>
    </LinearLayout>
