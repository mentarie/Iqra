            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/colorBackground"/>
        </LinearLayout>
        </ScrollView>

    <!--Navigasi halaman-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorSeparator"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/j1_h1_b"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/button_bg_rounded_disabled"
            android:src="@drawable/ic_baseline_navigate_before" />

        <TextView
            android:id="@+id/j1_h1_nomor_halaman"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1/18"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/j1_h1_n"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/button_bg_rounded_theme"
            android:src="@drawable/ic_baseline_navigate_next" />
    </LinearLayout>
