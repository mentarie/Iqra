                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/button_bg_rounded_corners">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="36dp"
