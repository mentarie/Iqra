<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_latihan_baca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".activity.latihan.LatihanBacaActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_regular"/>
    <LinearLayout
        android:id="@+id/textview1"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:padding="14dp"
            android:textAlignment="center"
            android:background="@drawable/button_bg_rounded_theme"
            android:textColor="@color/colorWhite"
            android:text="Klik pada bacaan untuk mendengarkan audio"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textview1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--Kolom 1-2-->
            <LinearLayout
                android:id="@+id/k_j1_h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/baca_j1_h1_2"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:src="@drawable/jilid1_hal1_2" />

                <ImageView
                    android:id="@+id/baca_j1_h1_1"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:src="@drawable/jilid1_hal1_1" />
            </LinearLayout>

            <!--Kolom 3-4-->
