<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_latihan_baca2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".activity.latihan.LatihanBacaActivity_5">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_regular"/>

    <LinearLayout
        android:id="@+id/textview1"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:padding="14dp"
            android:textAlignment="center"
            android:background="@drawable/button_bg_rounded_theme"
            android:textColor="@color/colorWhite"
            android:text="Klik pada bacaan untuk mendengarkan audio"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollview"
        app:layout_constraintTop_toBottomOf="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <!--Kolom 1-2-->
                <LinearLayout
                    android:id="@+id/k_j1_h5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal"
                    android:background="@drawable/button_bg_rounded_corners">
                    <ImageView
                        android:id="@+id/baca_j1_h5_1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:layout_margin="12px"
                        android:src="@drawable/jilid1_hal5_1"/>
                </LinearLayout>

                <!--Kolom 3-4-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/baca_j1_h5_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/button_bg_rounded_corners">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:src="@drawable/jilid1_hal5_3"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/baca_j1_h5_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/button_bg_rounded_corners">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:src="@drawable/jilid1_hal5_2"/>
                    </LinearLayout>
                </LinearLayout>

                <!--Kolom 5-6-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/baca_j1_h5_5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/button_bg_rounded_corners">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:src="@drawable/jilid1_hal5_5"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/baca_j1_h5_4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="12dp"
